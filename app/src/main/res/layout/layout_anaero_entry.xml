<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Fecha"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edt_tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Duracion HH:MM:SS"
        android:inputType="time"
        android:layout_below="@+id/tv_fecha"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edt_peso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_fecha"
        android:layout_alignRight="@+id/tv_fecha"
        android:layout_below="@+id/edt_tiempo"
        android:layout_marginTop="83dp"
        android:ems="10"
        android:hint="Peso"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edt_peso"
        android:layout_toRightOf="@+id/edt_peso"
        android:layout_toEndOf="@+id/edt_peso"
        android:layout_alignTop="@+id/edt_peso" />

    <EditText
        android:id="@+id/edt_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edt_peso"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_descripcion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="@string/guardar"
        android:onClick="submit"/>


</RelativeLayout>