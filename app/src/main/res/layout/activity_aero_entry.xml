<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content" android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvActividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/letra"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_Fecha0"
        android:paddingTop="@dimen/top2"
        android:textSize="@dimen/letra2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="@dimen/letra2" />

    <TextView
        android:id="@+id/edt_tiempo0"
        android:textSize="@dimen/letra2"
        android:paddingTop="@dimen/top2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duracion"
        android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/edt_horas"
                android:textSize="@dimen/letra2"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="hh" />

            <TextView
                android:id="@+id/textView2"
                android:textSize="@dimen/letra2"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"  />

            <TextView
                android:id="@+id/edt_minutos"
                android:textSize="@dimen/letra2"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="mm" />

            <TextView
                android:id="@+id/textView3"
                android:textSize="@dimen/letra2"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=":"  />

            <TextView
                android:id="@+id/edt_segundos"
                android:textSize="@dimen/letra2"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ss" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/top2"
        android:gravity="center">

        <EditText
            android:id="@+id/edt_distancia"
            android:textSize="@dimen/letra2"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:hint="Distancia" />

        <TextView
            android:id="@+id/tvKm"
            android:textSize="@dimen/letra2"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Km"  />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_descripcion"
        android:textSize="@dimen/letra2"
        android:paddingTop="@dimen/top"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion"
        android:inputType="textMultiLine"/>


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:text="@string/guardar"
        android:onClick="submit"/>


    </LinearLayout>
</ScrollView>